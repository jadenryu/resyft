# Resyft School Productivity Platform - Environment Variables

# =====================
# Database Configuration
# =====================
DATABASE_URL="postgresql://username:password@localhost:5432/resyft_school"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# =====================
# Vector Database (Qdrant)
# =====================
QDRANT_URL="http://localhost:6333"
QDRANT_API_KEY=""  # Optional for local, required for cloud

# Alternative: Qdrant Cloud
# QDRANT_URL="https://your-cluster.qdrant.tech:6333"
# QDRANT_API_KEY="your-api-key"

# =====================
# AI Services
# =====================
# OpenAI (for embeddings and AI agents)
OPENAI_API_KEY="sk-your-openai-api-key"

# Alternative: OpenRouter for diverse model access
OPENROUTER_API_KEY="sk-or-your-openrouter-key"

# PydanticAI Configuration
PYDANTIC_AI_MODEL="openai:gpt-4o-mini"  # or openai:gpt-4o

# =====================
# File Storage
# =====================
# Supabase Storage
SUPABASE_STORAGE_BUCKET="course-documents"

# Alternative: AWS S3
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="resyft-documents"

# =====================
# Application Configuration
# =====================
# Frontend
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_AI_SERVICE_URL="http://localhost:8001"

# Backend
BACKEND_PORT=8000
AI_SERVICE_PORT=8001

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,https://resyft.co,https://www.resyft.co"

# =====================
# Security
# =====================
JWT_SECRET="your-jwt-secret-key"
ENCRYPTION_KEY="your-32-character-encryption-key"

# =====================
# Development/Production Flags
# =====================
NODE_ENV="development"  # or "production"
DEBUG="true"

# =====================
# Analytics (Optional)
# =====================
# Google Analytics
NEXT_PUBLIC_GA_ID=""

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST=""

# =====================
# Email Service (Optional)
# =====================
# Resend
RESEND_API_KEY=""

# SendGrid
SENDGRID_API_KEY=""

# =====================
# Redis (for caching and queues)
# =====================
REDIS_URL="redis://localhost:6379"

# Alternative: Redis Cloud
# REDIS_URL="redis://username:password@host:port"

# =====================
# Performance Monitoring (Optional)
# =====================
# Sentry
SENTRY_DSN=""

# =====================
# Deployment Configuration
# =====================
# Railway
RAILWAY_ENVIRONMENT=""

# Vercel
VERCEL_URL=""

# =====================
# Feature Flags
# =====================
ENABLE_DOCUMENT_UPLOAD="true"
ENABLE_CLASS_SHARING="true"
ENABLE_ANALYTICS="true"
ENABLE_STUDY_SESSIONS="true"
MAX_FILE_SIZE_MB="50"
MAX_FILES_PER_CLASS="100"

# =====================
# Rate Limiting
# =====================
RATE_LIMIT_REQUESTS_PER_MINUTE="60"
RATE_LIMIT_REQUESTS_PER_HOUR="1000"

# =====================
# Embedding Configuration
# =====================
DEFAULT_EMBEDDING_MODEL="BAAI/bge-small-en-v1.5"
CHUNK_SIZE="512"
CHUNK_OVERLAP="64"
MAX_CHUNK_SIZE="1024"